<h1>Let's eat!</h1>

<div class="container">
  <div class= "row">
    <div class= "col-md-6">
      <h2>Eat da Burger</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class= "col-md-6">
      <h2>Burgers devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container">
  <div class= "row">
    <div class= "col-md-12">
      <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="Burger Name">Burger Name:</label>
              <input type="text" id="burger_name" name="name" placeholder="Add burger here"> 
  </div>
  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured!
  </div>

  <button type="submit">Add Burger</button>
</form>
